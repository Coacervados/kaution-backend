{
  "compilerOptions": {
    "target": "ES2022",                       
    "module": "NodeNext",                     
    "moduleResolution": "NodeNext",           
    "strict": true,                           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./src",                       
    "outDir": "./dist",                       
    "resolveJsonModule": true,
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
